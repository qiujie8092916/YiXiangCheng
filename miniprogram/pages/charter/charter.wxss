@charset "UTF-8";
/* miniprogram/pages/charter/charter.wxss */
/** 主题蓝 */
/** border边框灰色 */
/** 默认字体颜色 */
page {
  height: 100%;
}

.content {
  background: #fff;
  min-height: 100vh;
}

.poi-time {
  margin-top: 35rpx;
}

.duration-con {
  width: 502rpx;
  display: flex;
  margin-left: 162rpx;
  box-sizing: border-box;
  justify-content: space-between;
}

.duration-it {
  width: 150rpx;
  height: 65rpx;
  font-size: 27rpx;
  color: #212b36;
  border-radius: 7rpx;
  border: 2rpx solid #cecece;
}

.duration-active {
  position: relative;
  color: #3184c7;
  background: white;
  border-radius: 7rpx;
  border: 2rpx solid #3184c7;
}

.duration-selected {
  position: absolute;
  right: -1rpx;
  bottom: -2rpx;
}

.register-info {
  padding-left: 162rpx;
  padding-right: 92rpx;
}

.label {
  font-size: 27rpx;
  line-height: 36rpx;
  margin-bottom: 8rpx;
  font-family: Helvetica;
  color: #212b36;
}

.input {
  font-size: 27rpx;
  height: 65rpx;
  color: #212b36;
  border-radius: 5rpx;
  padding-left: 20rpx;
  background: #ffffff;
  border: 2rpx solid #cecece;
}

.input.disabled {
  background: #f8f8f8;
}

.authorization-btn {
  height: 66rpx;
  min-width: 0rpx;
  font-size: 27rpx;
  font-weight: 500;
  background: #3184c7;
  border-radius: 5rpx;
  width: 180rpx !important;
  color: white;
  min-height: 66rpx !important;
  margin-left: 20rpx !important;
  font-family: PingFangSC-Medium, PingFang SC;
}

.marginbot {
  margin-bottom: 35rpx;
}

.price {
  margin-top: 10rpx;
  margin-bottom: 45rpx;
}

.price-detail {
  font-size: 40rpx;
  color: #3184c7;
}

.price-desc {
  font-size: 28rpx;
  color: #3184c7;
}

.pay {
  padding-bottom: 50rpx;
  background-color: #ffffff;
}

.pay-btn {
  width: 610rpx;
  height: 100rpx;
  font-size: 32rpx;
  border-radius: 5rpx;
  text-align: center;
  line-height: 100rpx;
  background: #3184c7;
  color: #fff;
}

.pay-disabled {
  pointer-events: none;
  background: #f7f7f7;
  color: rgba(0, 0, 0, 0.3);
}

.error,
.error .wx-checkbox-input {
  border: 2rpx solid red;
}

.checkbox.error {
  border: initial;
}

.charter-day {
  padding-left: 162rpx;
  padding-right: 92rpx;
}

.day-picker {
  height: 65rpx;
  font-size: 27rpx;
  border-radius: 5rpx;
  padding-left: 24rpx;
  padding-right: 24rpx;
  border: 2rpx solid #cecece;
}

.jiantou {
  font-size: 22rpx;
}

._icon_ {
  font-size: 40rpx;
}

.block {
  width: 502rpx;
  margin-left: 34rpx;
  box-sizing: border-box;
}
