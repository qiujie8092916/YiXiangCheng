@charset "UTF-8";
/* miniprogram/pages/charter/charter.wxss */
/** 主题蓝 */
/** border边框灰色 */
/** 默认字体颜色 */
page {
  height: 100%;
}

.content {
  background: #fff;
  height: 100%;
}

.poi-time {
  padding-bottom: 35rpx;
  margin-top: 60rpx;
}

.duration-con {
  padding-left: 185rpx;
  padding-right: 138rpx;
}

.duration-it {
  width: 190rpx;
  height: 80rpx;
  color: #212b36;
  border-radius: 7rpx;
  border: 2rpx solid #cecece;
}

.duration-it:first-child {
  margin-right: 47rpx;
}

.duration-active {
  width: 190rpx;
  height: 80rpx;
  position: relative;
  color: #3184c7;
  background: white;
  border-radius: 7rpx;
  border: 2rpx solid #3184c7;
}

.duration-selected {
  position: absolute;
  right: -1rpx;
  bottom: -2rpx;
}

.register-info {
  margin-top: 45rpx;
  padding-left: 162rpx;
  padding-right: 95rpx;
}

.label {
  font-size: 27rpx;
  line-height: 36rpx;
  margin-bottom: 8rpx;
  font-family: Helvetica;
  color: #212b36;
}

.input {
  font-size: 27rpx;
  height: 65rpx;
  color: #212b36;
  border-radius: 5rpx;
  padding-left: 20rpx;
  background: #ffffff;
  border: 2rpx solid #cecece;
}

.input.disabled {
  background: #f8f8f8;
}

.authorization-btn {
  height: 66rpx;
  min-width: 0rpx;
  font-size: 27rpx;
  font-weight: 500;
  background: #3184c7;
  border-radius: 5rpx;
  width: 180rpx !important;
  color: white;
  min-height: 66rpx !important;
  margin-left: 20rpx !important;
  font-family: PingFangSC-Medium, PingFang SC;
}

.marginbot {
  margin-bottom: 20rpx;
}

.price {
  margin-top: 286rpx;
  margin-bottom: 91rpx;
}

.price-detail {
  font-size: 40rpx;
  color: #3184c7;
}

.price-desc {
  font-size: 28rpx;
  color: #3184c7;
}

.pay {
  padding-bottom: 50rpx;
}

.pay-btn {
  width: 609rpx;
  height: 101rpx;
  font-size: 33rpx;
  border-radius: 5rpx;
  text-align: center;
  line-height: 101rpx;
  background: #3184c7;
  color: #fff;
}

.pay-disabled {
  pointer-events: none;
  background: #f7f7f7;
  color: rgba(0, 0, 0, 0.3);
}

.error,
.error .wx-checkbox-input {
  border: 1rpx solid red;
}

.checkbox.error {
  border: initial;
}
