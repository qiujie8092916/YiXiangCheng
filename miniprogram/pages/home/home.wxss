@charset "UTF-8";
/* miniprogram/pages/home/home.wxss */
/*! 主题蓝 */
page {
  align-items: center;
  font-family: PingFangSC-Medium, PingFang SC;
}

.header {
  width: 100vw;
  height: 260rpx;
  background: #ffffff;
  margin-bottom: 40rpx;
}

.logo {
  width: 134rpx;
  height: 129rpx;
  margin-right: 30rpx;
}

.name {
  font-size: 62rpx;
  font-weight: 500;
  line-height: 87rpx;
  margin-right: 10rpx;
  color: #494a4c;
}

.eng {
  height: 60rpx;
  font-size: 43rpx;
  font-weight: 500;
  line-height: 60rpx;
  color: #494a4c;
}

.desc {
  font-size: 25rpx;
  font-weight: 500;
  line-height: 36rpx;
  color: #494a4c;
}

.info {
  font-size: 22rpx;
  font-weight: 500;
  line-height: 31rpx;
  color: #797b7f;
}

.biz-block {
  width: 700rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
  border-radius: 14rpx;
  padding: 0 40rpx 0;
  box-sizing: border-box;
  background-color: #ffffff;
}

.biz-name {
  color: #3184c7;
  font-size: 51rpx;
  font-weight: 500;
  line-height: 72rpx;
}

.biz-desc {
  font-size: 33rpx;
  font-weight: 500;
  line-height: 45rpx;
  color: #676767;
}

.btn {
  height: 82rpx;
  padding: 0 25rpx;
  font-size: 30rpx;
  font-weight: 500;
  border-radius: 6rpx;
  background-color: #3184c7;
  color: white;
}

.feat {
  font-size: 29rpx;
  font-weight: 500;
  color: #848282;
}

.slogan {
  width: 290rpx;
  height: 36rpx;
  margin-top: 80rpx;
}
