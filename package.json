{
  "name": "YiXiangCheng",
  "version": "0.0.1",
  "main": "app.js",
  "repository": "git@github.com:qiujie8092916/YiXiangCheng.git",
  "author": "qiujie <qiujieee_empty@outlook.com>",
  "license": "MIT",
  "private": false,
  "dependencies": {},
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{wxml,js,wxss,wxs}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.wxml",
        "options": {
          "parser": "html"
        }
      },
      {
        "files": "*.wxss",
        "options": {
          "parser": "css"
        }
      },
      {
        "files": "*.wxs",
        "options": {
          "parser": "babel"
        }
      }
    ]
  }
}
